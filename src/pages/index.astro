---
import Layout from "../layouts/Layout.astro";
import {
  generateBreadcrumbSchema,
  generateFAQSchema,
} from "../lib/seo";

// Redesign components
import { HeroMissionWrapper } from "../components/sections/HeroMissionWrapper";
import { ProgramsFocus } from "../components/sections/ProgramsFocus";
import { ActivitiesCarousel } from "../components/sections/ActivitiesCarousel";

// FAQ Schema for homepage
const homeFAQs = [
  {
    question: "What programs does Corelia Academy offer?",
    answer:
      "Corelia Academy offers programs in Psychology, Sociology, Political Science, Anthropology, Economics, and Geography. We focus on developing critical thinking and practical skills.",
  },
  {
    question: "How can I apply to Corelia Academy?",
    answer:
      "You can apply by clicking the 'Apply Now' button on our website or contact us for more information about the admission process.",
  },
];

const breadcrumbSchema = generateBreadcrumbSchema([
  { name: "Home", url: "/" },
]);

const faqSchema = generateFAQSchema(homeFAQs);
---

<Layout
  title="Corelia Academy - Shaping Future Leaders Through World-Class Education"
  description="Corelia Academy provides personalized education, world-class mentorship, and hands-on experience that transforms potential into success."
  path="/"
  keywords={[
    "education",
    "academy",
    "university",
    "programs",
    "student life",
  ]}
  image="/images/hero-student.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>

  <div class="bg-white text-[#1F3050]">
    <!-- Navbar temporarily removed -->

    <main class="flex flex-col bg-white">
      <!-- 1. Hero + Mission with unified dither background -->
      <HeroMissionWrapper client:load />

      <!-- 2. Programs with Focus Cards -->
      <ProgramsFocus client:visible />

      <!-- 4. Activities & Events (Apple Cards Carousel) -->
      <ActivitiesCarousel client:visible />
    </main>
  </div>
</Layout>
